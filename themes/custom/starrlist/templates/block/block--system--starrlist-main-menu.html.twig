{#
/**
 * @file
 * Custom template for the Main Navigation block.
 *
 * Available variables:
 * - content: The block content.
 * - configuration: A list of the block's configuration values.
 * - attributes: HTML attributes for the block element.
 * - title: The block title.
 * - content_attributes: HTML attributes for the block content.
 * - title_attributes: HTML attributes for the block title.
 */
#}
<div{{ attributes.addClass('block', 'block--main-navigation') }}>
  <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
    <a href="{{ path('<front>') }}" class="navbar-brand d-flex align-items-center text-center">
      <div class="icon p-2 me-2">
        <img class="img-fluid" src="{{ directory }}/img/icon-deal.png" alt="Icon" style="width: 30px; height: 30px;">
      </div>
      <h1 class="m-0 text-primary">Makaan</h1>
    </a>
    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav ms-auto">
        {{ content }}
      </div>
      <a href="#" class="btn btn-primary px-3 d-none d-lg-flex">Add Property</a>
    </div>
  </nav>
</div>
